@{
    ViewData["Title"] = "Speech to Text";
}

<div>
    <button id="startBtn">Start Recording</button>
    <p id="result">Your speech will appear here.</p>
</div>

<script>
    document.getElementById('startBtn').addEventListener('click', async () => {
        const response = await fetch('/Home/TranslateSpeech', {
            method: 'POST',
        });

        const data = await response.json();
        document.getElementById('result').innerText = data.recognizedText;
        console.log(data);

    });
</script>

